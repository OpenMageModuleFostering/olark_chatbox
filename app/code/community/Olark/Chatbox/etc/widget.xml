<widgets>
  	<chatbox_chatbox type="chatbox/chatbox" translate="name description" module="chatbox">
    		<name>Olark Live Chat</name>
    		<description>Adds Olark Live Chat to your website.</description>
        <parameters>
            <siteID>
                <label>Olark Site-ID</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <description>
                  <![CDATA[
                   <strong>New to Olark?</strong>
                   <a target="_blank" href="https://olark.com/signup/create_new_account?rid=magentocartsaver1_0">Create an account.</a>
                   <strong>Already an Olark user?</strong>
                   <a target="_blank" href="https://olark.com/settings/code">Find your Site-ID.</a>
                  ]]>
                </description>
            </siteID>
            <valueThreshold>
                <label>Minimum Cart Value for Notifications</label>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
                <description>
                  <![CDATA[
                    Send a notification to your operator when a customer's cart reaches at least this value.
                  ]]>
                </description>
            </valueThreshold>
            <addNotification>
                <label>Send Cart Add Notifications?</label>
                <visible>1</visible>
                <required>0</required>
                <type>select</type>
                <values>
                    <one translate="label">
                        <value>1</value>
                        <label>Yes</label>
                    </one>
                    <two translate="label">
                        <value>0</value>
                        <label>No</label>
                    </two>
                 </values>
                <description>
                  <![CDATA[
                    Turn on or off notifications to your operator when a product is added from a customer's cart.
                  ]]>
                </description>
            </addNotification>
            <removeNotification>
                <label>Send Cart Removal Notifications?</label>
                <visible>1</visible>
                <required>0</required>
                <type>select</type>
                <values>
                    <one translate="label">
                        <value>1</value>
                        <label>Yes</label>
                    </one>
                    <two translate="label">
                        <value>0</value>
                        <label>No</label>
                    </two>
                 </values>
                <description>
                  <![CDATA[
                    Turn on or off notifications to your operator when a product is removed from a customers cart.
                  ]]>
                </description>
            </removeNotification>
            <showSku>
                <label>Show SKU?</label>
                <visible>1</visible>
                <required>0</required>
                <type>select</type>
                <values>
                    <one translate="label">
                        <value>1</value>
                        <label>Yes</label>
                    </one>
                    <two translate="label">
                        <value>0</value>
                        <label>No</label>
                    </two>
                 </values>
                <description>
                  <![CDATA[
                    Show the SKU as part of the product name in the operator's buddy list.
                  ]]>
                </description>
            </showSku>
            <customConfig>
                <label>Developer API snippets</label>
                <visible>1</visible>
                <required>0</required>
                <type>textarea</type>
                <description>
                  <![CDATA[
                    For help on how to use the API and for example snippets, go to <a target="_blank" href="http://olark.com/developer">http://olark.com/developer</a>
                  ]]>
                </description>
            </customConfig>
        </parameters>
  	</chatbox_chatbox>
</widgets>
